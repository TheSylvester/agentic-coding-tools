#!/usr/bin/env bash
# cursor-agent: Non-interactive Cursor Agent wrapper.
#
# Usage:
#   cursor-agent <prompt>                         # Args as prompt
#   cursor-agent --resume <id> <prompt>           # Resume existing chat
#   PROMPT_FILE=task.md cursor-agent              # Read from file
#   cat task.md | cursor-agent                    # Read from stdin
#
# Environment variables:
#   PROMPT_FILE          - Read prompt from this file
#   CURSOR_AGENT_MODEL   - Model to use (passed as --model)
#   CURSOR_SESSION       - Session ID to resume (fallback: CHAT_ID, SESSION_ID)
#
# Pass-through flags: --force, --approve-mcps, --browser

set -euo pipefail

MODEL="${CURSOR_AGENT_MODEL:-}"
RESUME="${CURSOR_SESSION:-${CHAT_ID:-${SESSION_ID:-}}}"
PASSTHRU_FORCE=false
PASSTHRU_APPROVE_MCPS=false
PASSTHRU_BROWSER=false

# Parse flags
while [[ $# -gt 0 ]]; do
  case "$1" in
    --resume|-r|--fork|-f)
      RESUME="$2"
      shift 2
      ;;
    --force)
      PASSTHRU_FORCE=true
      shift
      ;;
    --approve-mcps)
      PASSTHRU_APPROVE_MCPS=true
      shift
      ;;
    --browser)
      PASSTHRU_BROWSER=true
      shift
      ;;
    --model)
      MODEL="$2"
      shift 2
      ;;
    --)
      shift
      break
      ;;
    *)
      break
      ;;
  esac
done

# Determine prompt source: PROMPT_FILE > args > stdin
if [[ -n "${PROMPT_FILE:-}" ]]; then
  PROMPT="$(cat "$PROMPT_FILE")"
elif [[ $# -gt 0 ]]; then
  PROMPT="$*"
elif [[ ! -t 0 ]]; then
  PROMPT="$(cat || true)"
else
  echo "Usage: cursor-agent [--fork] <prompt>" >&2
  echo "       PROMPT_FILE=task.md cursor-agent" >&2
  echo "       cat task.md | cursor-agent" >&2
  exit 1
fi

# Validate prompt
if [[ -z "${PROMPT//[$' \t\r\n']/}" ]]; then
  echo "Error: prompt is empty" >&2
  exit 1
fi

# Verify cursor-agent command exists
if ! command -v cursor-agent >/dev/null 2>&1; then
  echo "Error: cursor-agent command not found" >&2
  exit 1
fi

# Build command args
CURSOR_ARGS=(--print --output-format json)
[[ -n "$MODEL" ]] && CURSOR_ARGS+=(--model "$MODEL")
[[ -n "$RESUME" ]] && CURSOR_ARGS+=(--resume "$RESUME")
[[ "$PASSTHRU_FORCE" == "true" ]] && CURSOR_ARGS+=(--force)
[[ "$PASSTHRU_APPROVE_MCPS" == "true" ]] && CURSOR_ARGS+=(--approve-mcps)
[[ "$PASSTHRU_BROWSER" == "true" ]] && CURSOR_ARGS+=(--browser)

# Run and capture output
OUTPUT=$(cursor-agent "${CURSOR_ARGS[@]}" -- "$PROMPT" 2>/dev/null)

# Extract result and session_id from JSON
if command -v jq >/dev/null 2>&1; then
  RESPONSE=$(echo "$OUTPUT" | jq -r '.result // empty' 2>/dev/null)
  SESSION_ID=$(echo "$OUTPUT" | jq -r '.session_id // empty' 2>/dev/null)
else
  # Fallback: basic extraction without jq
  RESPONSE=$(echo "$OUTPUT" | grep -oP '"result"\s*:\s*"\K[^"]*' | head -1)
  SESSION_ID=$(echo "$OUTPUT" | grep -oP '"session_id"\s*:\s*"\K[^"]*' | head -1)
fi

# Output response
if [[ -n "$RESPONSE" ]]; then
  echo "$RESPONSE"
else
  # If JSON parsing failed, output raw
  echo "$OUTPUT"
fi

# Always output session ID for caller to capture
if [[ -n "$SESSION_ID" ]]; then
  echo ""
  echo "[session_id: $SESSION_ID]"
fi
